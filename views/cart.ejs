  <!-- Sub total -->
  <div class=" mt-6 h-[100%] w-[30%] rounded-lg border bg-white p-6 shadow-md md:mt-0 md:w-1/3 sticky z-50 top-10">
    <div class="mb-2 flex justify-between">
      <p class="text-gray-700">Subtotal</p>
      <p class="text-gray-700">Rs: <%= total_price %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-700">Shipping</p>
      <p class="text-gray-700">Rs:60</p>
    </div>
    <hr class="my-4" />
    <div class="flex justify-between">
      <p class="text-lg font-bold">Total</p>
      <div class="">
        <p class="mb-1 text-lg font-bold">Rs: <%= total_price + 60 %></p>
        <p class="text-sm text-gray-700">including VAT</p>
      </div>
    </div>
    <button class="mt-6 w-full rounded-md bg-blue-500 py-1.5 font-medium text-blue-50 hover:bg-blue-600">Check out</button>
  </div>


  <!--script for alert message vanish-->
  <script>
    document.querySelectorAll('[data-dismissible="alert"]').forEach(alert => {
      alert
        .querySelector('[data-dismissible-target]')
        .addEventListener('click', () => {
          alert.style.display = 'none';
        });
    });
  </script>
